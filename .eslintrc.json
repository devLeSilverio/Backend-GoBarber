{
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "prettier"
  ],
  "rules": {
   "prettier/prettier":"error",
   "class-methods-use-this":"off",
   "typescript-eslint/camelcase":"off",
   "@typescript-eslint/no-unused-vars": ["error",{
     "argsIgnorePattern": "_"
   }],
   "@typescript-eslint/naming-convention": [
     "error",
     {
       "seletor": "interface",
       "format": ["PAscalCase"],
       "custom": {
         "regex": "^I[A-Z]",
         "match":true
       }
      }
    ],
    "import/extensions":[
      "error",
      "ignorePackages",
      {
        "ts":"never"
      }
    ]
  },
  "settings": {
    "import/resolver":{
      "typescript":{}
    }
  }
}
